{
  "name": "oilpriceapi-mcp",
  "version": "1.1.0",
  "description": "MCP server for real-time oil, gas, and commodity prices from OilPriceAPI",
  "type": "module",
  "bin": {
    "oilpriceapi-mcp": "./build/index.js"
  },
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc && chmod 755 build/index.js",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "build"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "oil-prices",
    "commodity-prices",
    "energy",
    "brent-crude",
    "wti",
    "natural-gas",
    "claude",
    "anthropic"
  ],
  "author": "OilPriceAPI <support@oilpriceapi.com>",
  "license": "MIT",
  "homepage": "https://oilpriceapi.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/OilpriceAPI/mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/OilpriceAPI/mcp-server/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
