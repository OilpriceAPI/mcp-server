{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.oilpriceapi/mcp-server",
  "description": "Real-time oil, gas & commodity prices. 40+ commodities with natural language queries.",
  "repository": {
    "url": "https://github.com/OilpriceAPI/mcp-server",
    "source": "github"
  },
  "version": "1.1.0",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "oilpriceapi-mcp",
      "version": "1.1.0",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Your OilPriceAPI key from oilpriceapi.com",
          "isRequired": true,
          "format": "string",
          "isSecret": true,
          "name": "OILPRICEAPI_KEY"
        }
      ]
    }
  ]
}
